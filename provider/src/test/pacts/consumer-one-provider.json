{
    "provider": {
        "name": "provider"
    },
    "consumer": {
        "name": "consumer-one"
    },
    "interactions": [
        {
            "description": "get single movie",
            "request": {
                "method": "GET",
                "path": "/movies/b3fc0be8-463e-4875-9629-67921a1e00f4"
            },
            "response": {
                "status": 200,
                "headers": {
                    "Content-Type": "application/hal+json"
                },
                "body": {
                    "title": "Iron Man",
                    "imdbScore": 7.9
                },
                "matchingRules": {
                    "$.body.title": {
                        "match": "type"
                    },
                    "$.body.imdbScore": {
                        "match": "number"
                    }
                }
            },
            "providerState": "Getting movie with any ID returns Iron Man"
        },
        {
            "description": "get movies by invalid score",
            "request": {
                "method": "GET",
                "path": "/movies",
                "query": "score=11.0"
            },
            "response": {
                "status": 400,
                "headers": {
                    "Content-Type": "application/json; charset=UTF-8"
                },
                "body": {
                    "error": "Bad Request",
                    "message": "Received invalid request. Score should be between 1 and 10.",
                    "status": 400
                },
                "matchingRules": {
                    "$.body.status": {
                        "match": "number"
                    },
                    "$.body.error": {
                        "match": "type"
                    },
                    "$.body.message": {
                        "match": "type"
                    }
                }
            },
            "providerState": "Getting movies by score invalid score returns bad request"
        },
        {
            "description": "get movies by score",
            "request": {
                "method": "GET",
                "path": "/movies",
                "query": "score=8.0"
            },
            "response": {
                "status": 200,
                "headers": {
                    "Content-Type": "application/hal+json"
                },
                "body": {
                    "movies": [
                        {
                            "title": "Iron Man",
                            "imdbScore": 8
                        }
                    ]
                },
                "matchingRules": {
                    "$.body.movies": {
                        "match": "type",
                        "min": 0
                    },
                    "$.body.movies[*].title": {
                        "match": "type"
                    },
                    "$.body.movies[*].imdbScore": {
                        "match": "number"
                    }
                }
            },
            "providerState": "Getting movies by score returns at least one movie"
        }
    ],
    "metadata": {
        "pact-specification": {
            "version": "2.0.0"
        },
        "pact-jvm": {
            "version": "3.5.11"
        }
    }
}